{
  "version": 3,
  "configurePresets": [
    {
      "name": "toolchain-base",
      "hidden": true,
      "toolchainFile": "$env{CMAKE_TOOLCHAIN_FILE}"
    },
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "inherits": "toolchain-base",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "USE_EMSCRIPTEN": false
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "emscriptenWindows-base",
      "hidden": true,
      "generator": "MinGW Makefiles",
      "inherits": "toolchain-base",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "H:/FastDocuments/Bibliotheken/ProgrammierBibliotheken/emsdk/upstream/emscripten/emcc.bat",
        "CMAKE_CXX_COMPILER": "H:/FastDocuments/Bibliotheken/ProgrammierBibliotheken/emsdk/upstream/emscripten/em++.bat",
        "USE_EMSCRIPTEN": true//,
        //"VCPKG_TARGET_TRIPLET": "wasm32-emscripten" // somehow does not work
      }
      //,"condition": {
      //  "type": "equals",
      //  "lhs": "${hostSystemName}",
      //  "rhs": "Windows"
      //}
    },
    {
      "name": "emscriptenWindows-debug",
      "displayName": "emscripten Win debug",
      "inherits": "emscriptenWindows-base",
      //"architecture": {
      //  "value": "x64",
      //  "strategy": "external"
      //},
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET" : "x64-windows"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x86-debug",
      "displayName": "x86 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      }
    },
    {
      "name": "x86-release",
      "displayName": "x86 Release",
      "inherits": "x86-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "toolchain-base",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ],
  "testPresets": [
    {
      "name": "windows Test Present",
      "description": "",
      "displayName": "",
      "configurePreset": "x64-debug",
      "output": {
        "verbosity": "extra"
      }
    }
  ]
}
